<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_9"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="414dp"
            android:layout_height="78dp"
            android:layout_marginBottom="19dp"
            android:background="@color/Dark_purple"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toTopOf="@+id/textView27"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="273dp"
            android:layout_height="56dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="baby proofing"
            android:textAlignment="center"
            android:textColor="@color/light_blue"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.453"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="319dp"
            android:layout_height="297dp"
            android:layout_marginTop="19dp"
            android:background="#FAF9F9"
            android:fontFamily="@font/alata"
            android:text="As your baby starts to crawl and explore, it’s important to ensure your home is safe. Cover electrical outlets, secure heavy furniture, and keep small objects out of reach. Use baby gates to block off dangerous areas like stairs. Regularly check for potential hazards as your baby grows and becomes more mobile. Additionally, consider installing cabinet locks and corner guards to prevent injuries. Creating a safe play area with soft mats and age-appropriate toys can also help keep your baby safe while exploring. The &quot;American Academy of Pediatrics&quot; offers a comprehensive guide to babyproofing your home. Online resources like &quot;Safe Kids Worldwide&quot; provide detailed checklists and safety tips to ensure your home is a secure environment for your child.  "
            android:textAlignment="center"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="321dp"
            android:layout_height="246dp"
            android:layout_marginTop="16dp"
            android:background="#FAF9F9"
            android:fontFamily="@font/acme"
            android:text="مع بدء طفلك في الزحف والاستكشاف، من المهم التأكد من أن منزلك آمن. غطِّ المقابس الكهربائية، وثبّت الأثاث الثقيل، واحفظ الأشياء الصغيرة بعيدًا عن متناول اليد. استخدم بوابات الأطفال لحجب المناطق الخطرة مثل السلالم. تحقق بانتظام من وجود مخاطر محتملة مع نمو طفلك وزيادة حركته. بالإضافة إلى ذلك، فكر في تركيب أقفال الخزائن وحمايات الزوايا لمنع الإصابات. إنشاء منطقة لعب آمنة مع حصائر ناعمة وألعاب مناسبة للعمر يمكن أن يساعد أيضًا في الحفاظ على سلامة طفلك أثناء الاستكشاف. تقدم &quot;الأكاديمية الأمريكية لطب الأطفال&quot; دليلًا شاملاً لتأمين المنزل للأطفال. توفر الموارد عبر الإنترنت مثل &quot;Safe Kids Worldwide&quot; قوائم تفقدية مفصلة ونصائح أمان لضمان أن يكون منزلك بيئة آمنة لطفلك.       "
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView27" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/acme"
            android:text="Below are videos to help you explore more about this topic "
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView28" />

        <WebView
            android:id="@+id/video1"
            android:layout_width="337dp"
            android:layout_height="200dp"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView30" />

        <WebView
            android:id="@+id/video2"
            android:layout_width="337dp"
            android:layout_height="200dp"
            android:layout_marginTop="18dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video1" />

        <WebView
            android:id="@+id/video3"
            android:layout_width="337dp"
            android:layout_height="200dp"
            android:layout_marginTop="18dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
