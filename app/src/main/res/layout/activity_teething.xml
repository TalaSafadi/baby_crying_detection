<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_9"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="414dp"
            android:layout_height="78dp"
            android:layout_marginBottom="19dp"
            android:background="@color/Dark_purple"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintBottom_toTopOf="@+id/textView27"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="273dp"
            android:layout_height="56dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="baby not eating well"
            android:textAlignment="center"
            android:textColor="@color/light_blue"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.453"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="326dp"
            android:layout_height="316dp"
            android:layout_marginTop="19dp"
            android:background="#FAF9F9"
            android:fontFamily="@font/alata"
            android:text="Teething can be a tough time for both babies and parents. Signs of teething include drooling, irritability, and a tendency to chew on things. Offer your baby a cold teething ring or a clean, damp washcloth to chew on. Gentle gum massages can also provide relief. Avoid giving your baby any medications without consulting your doctor. Teething gels should be used sparingly and only on the advice of a healthcare professional. Keeping your baby comfortable with extra cuddles and soothing words can make a big difference. &quot;What to Expect&quot; and &quot;HealthyChildren.org&quot; provide comprehensive information and tips for managing teething. Additionally, natural remedies like chamomile teething tablets and amber teething necklaces are popular, but be sure to discuss these with your pediatrician before use.  "
            android:textAlignment="center"
            android:textSize="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar3" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="340dp"
            android:layout_height="270dp"
            android:layout_marginTop="16dp"
            android:background="#FAF9F9"
            android:fontFamily="@font/acme"
            android:text="يمكن أن يكون التسنين وقتًا صعبًا لكل من الأطفال والآباء. تشمل علامات التسنين اللعاب المفرط، التهيج، والرغبة في المضغ على الأشياء. قدم لطفلك حلقة تسنين باردة أو قطعة قماش مبللة ونظيفة ليعض عليها. يمكن أن توفر تدليك اللثة بلطف راحة أيضًا. تجنب إعطاء طفلك أي أدوية دون استشارة طبيبك. يجب استخدام جل التسنين بشكل محدود وفقط بناءً على نصيحة أخصائي الرعاية الصحية. الحفاظ على راحة طفلك من خلال العناق الإضافي والكلمات المهدئة يمكن أن يحدث فرقًا كبيرًا. &quot;موقع What to Expect&quot; و&quot;HealthyChildren.org&quot; يوفران معلومات شاملة ونصائح لإدارة التسنين. بالإضافة إلى ذلك، العلاجات الطبيعية مثل أقراص التسنين بالبابونج وقلادات التسنين من العنبر شائعة، ولكن تأكد من مناقشتها مع طبيب الأطفال قبل الاستخدام.  "
            android:textAlignment="center"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView27" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/acme"
            android:text="Below are videos to help you explore more about this topic "
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView28" />

        <WebView
            android:id="@+id/video1"
            android:layout_width="337dp"
            android:layout_height="200dp"
            android:layout_marginTop="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView30" />

        <WebView
            android:id="@+id/video2"
            android:layout_width="337dp"
            android:layout_height="200dp"
            android:layout_marginTop="18dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video1" />

        <WebView
            android:id="@+id/video3"
            android:layout_width="337dp"
            android:layout_height="200dp"
            android:layout_marginTop="18dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/video2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
